@page "/Debt"
@rendermode InteractiveServer

<h3>Debt</h3>
<input class="input-field" type="text" @bind="_amount" placeholder="Debt" required>
<select @bind="_status">
	<option value="Pending">Pending</option>
	<option value="Cleared">Cleared</option>
</select>
<input class="input-field" type="date" @bind="_date" placeholder="date" required>
<input class="input-field" type="text" @bind="_source" placeholder="source" required>
<select @bind="_tag">
	@for (int i = 0; i < Current_Account._tags.Count; i++)
	{
		<option value="@i">@Current_Account._tags[i]._tags</option>
	}
</select>
<input class="input-field" type="text" @bind="_note" placeholder="Date">

<button class="submit-btn" @onclick="OnClick" type="submit">Add Inflow</button>
@code {
	public int _amount;
	public DateOnly _date;
	public string _source;
	public bool success;
	public string _status = "Pending";
	public int _tag;
	public string _note;

	public void OnClick()
	{
		Console.WriteLine(_status);
		success = Current_Account._currentAccount.History(new Transaction(_amount, _status, _source, _date, _tag, _note));
		Current_Account._currentAccount.UpdateBalance();
		Current_Account.DatabaseExtraction();
	}
}
